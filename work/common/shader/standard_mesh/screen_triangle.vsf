struct VSInput {
    uint _vertexId : SV_VertexId;
};

struct PSInput{
    float4 _position : SV_Position;
    float2 _positionNdc : NDC_POSITION;
};

PSInput main(VSInput input){
    PSInput result = (PSInput)0;
    float x = input._vertexId % 3 == 0 ?  0.05 : -0.05;
    float y = input._vertexId % 3 == 2 ?  0.05 : -0.05;
    result._position = float4(x, y, 0, 1);
    result._positionNdc = float2(x, y);

    return result;
}
